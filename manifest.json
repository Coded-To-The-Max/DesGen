{
  "manifest_version": 3,
  "name": "DesGen - Desmos Graph Converter",
  "version": "1.0.0",
  "description": "Convert any image into Desmos graph outlines using edge detection and curve fitting with DesGen",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.desmos.com/*"
  ],
  "action": {
    "default_popup": "extension/popup.html",
    "default_icon": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.desmos.com/calculator*"],
      "js": ["extension/content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["extension/*"],
      "matches": ["https://www.desmos.com/*", "<all_urls>"]
    }
  ],
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  }
}